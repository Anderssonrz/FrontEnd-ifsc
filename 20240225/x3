const precoProduto = parseFloat(prompt("digite o preço do produto: "))
const parcela = precoProduto / 3
const opcao = parseInt(prompt("1-a Vista\n2 - Parcelado em 3x de R$" + parcela.toFixed(2)))
if (opcao === 1) {
    const desconto = precoProduto - (precoProduto * (10 / 100))
    alert("fica R$" + desconto)
} else if (opcao === 2) {
    alert("ficara 3x de R$ " + parcela.toFixed(2))
} else {
    alert("Opção invalida")
}

